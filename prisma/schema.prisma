// This is your Prisma schema file
// For SQLite (local dev): provider = "sqlite"
// For PostgreSQL (production): provider = "postgresql"

datasource db {
  provider = "sqlite" // Change to "postgresql" for production
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================
// VIEW TRACKING MODELS (Active)
// ============================================

// Page View Tracking
model PageView {
  id        String   @id @default(cuid())
  slug      String
  path      String   // Full path: /blog/article-slug
  ip        String?  // Optional IP tracking (anonymized)
  userAgent String?  // Browser info
  referrer  String?  // Traffic source
  viewedAt  DateTime @default(now())
  
  @@index([slug])
  @@index([viewedAt])
  @@index([path])
}

// Article Statistics (aggregated)
model ArticleStats {
  id            String   @id @default(cuid())
  slug          String   @unique
  viewCount     Int      @default(0)
  uniqueViews   Int      @default(0)
  lastViewedAt  DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([viewCount])
  @@index([slug])
}

